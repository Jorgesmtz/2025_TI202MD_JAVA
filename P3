import java.util.*;

public class P3_Preorder {

    static class Node {
        String value;
        List<Node> children = new ArrayList<>();
        Node(String v) { value = v; }
    }

  
    public static void preorder(Node p, List<String> out) {
        out.add(p.value); // visitar
        for (Node c : p.children) preorder(c, out);
    }

    public static void main(String[] args) {
        Node A = new Node("A");
        Node B = new Node("B");
        Node C = new Node("C");
        Node D = new Node("D");
        A.children.add(B); A.children.add(C);
        B.children.add(D);

        List<String> result = new ArrayList<>();
        preorder(A, result);
        System.out.println("Preorder: " + result); // A B D C
    }
}
