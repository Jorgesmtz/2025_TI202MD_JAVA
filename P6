import java.util.*;

public class P6_BreadthFirst {

    static class Node {
        String value;
        List<Node> children = new ArrayList<>();
        Node(String v) { value = v; }
    }

    public static List<String> breadthFirst(Node root) {
        List<String> out = new ArrayList<>();
        if (root == null) return out;
        Queue<Node> q = new ArrayDeque<>();
        q.add(root);
        while (!q.isEmpty()) {
            Node p = q.remove();
            out.add(p.value); // visitar
            for (Node c : p.children) q.add(c);
        }
        return out;
    }

    public static void main(String[] args) {
        Node A = new Node("A");
        Node B = new Node("B");
        Node C = new Node("C");
        Node D = new Node("D");
        A.children.add(B); A.children.add(C);
        B.children.add(D);

        System.out.println("BFS: " + breadthFirst(A)); // A B C D
    }
}
